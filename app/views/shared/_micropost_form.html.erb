<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost...", onkeyup: "$('.counter').html((140-$(this).val.length) + ' Chafracters')" %>
  </div>
  <span class="counter">
    140 Characters
  </span>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>
